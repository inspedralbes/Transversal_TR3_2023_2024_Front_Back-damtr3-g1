FROM node:latest

# Instala Python y pip
RUN apt-get update && apt-get install -y \
    python3 \
    # python3-matplotlib \
    # python3-pandas \
    # python3-requests

WORKDIR /app

# Copia los archivos de paquete de Node.js
COPY package*.json ./

# Instala las dependencias de Node.js
RUN npm install

# Copia los archivos de la aplicaci√≥n Node.js
COPY . .

# Instala matplotlib de Python 3
# RUN pip3 install matplotlib

# Expone el puerto 3000
EXPOSE 3000

# Ejecuta el servidor de Node.js
CMD ["node", "index.js"]
